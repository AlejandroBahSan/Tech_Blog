<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  {{!-- form that createsa new posts - action leads us to post routes - router.post('/add') --}}
  <form method="POST" action="/api/post/add" id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="title" class="form-input" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="content" class="form-input"></textarea>

    <button type="submit" class="btn">Create</button>
  </form>
</div>
