<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form action="/api/post/{{postData.id}}" method="POST" id="edit-post-form" class="card-body">
    <input type="hidden" id="post-id" placeholder="{{postData.id}}" value="{{postData.id}}" />

    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="title" id="post-title" value="{{postData.title}}" placeholder="{{postData.title}}" class="form-input" />

    <label class="form-label" for="post-content">Content</label>
    <textarea id="post-body" name="content" class="form-input" value="{{postData.content}}" placeholder="{{postData.content}}"></textarea>

    <button type="submit" class="btn" id="update-btn">Update</button>

    <button type="button" id="delete-btn" class="btn" id="delete-btn">Delete</button>
  </form>
</div>
